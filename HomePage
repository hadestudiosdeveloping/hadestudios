  <footer class="py-8 text-center text-gray-400 border-t border-white/10">© <span id="year"></span> HadeStudios • Tutti i diritti riservati</footer>

  <script>
    // ===== Utilities =====
    const $ = (s,ctx=document)=>ctx.querySelector(s);
    const $$ = (s,ctx=document)=>Array.from(ctx.querySelectorAll(s));
    const fmtEUR = v => new Intl.NumberFormat('it-IT',{style:'currency',currency:'EUR'}).format(v);

    // ===== SHOP (static) =====
    const PRODUCTS = [
      { id:'inv', title:'Inventory Pro', subtitle:'UI drag & drop, hotbar', price:24.99, compareAtPrice:29.99, image:'https://images.unsplash.com/photo-1542831371-29b0f74f9713?q=80&w=1000&auto=format&fit=crop', paymentLink:'#', type:'systems' },
      { id:'combat', title:'Combat Netcode', subtitle:'Combo + hitbox predittiva', price:22.00, compareAtPrice:29.00, image:'https://images.unsplash.com/photo-1518779578993-ec3579fee39f?q=80&w=1000&auto=format&fit=crop', paymentLink:'#', type:'systems' },
      { id:'shop', title:'Shop Ultimate', subtitle:'Negozio multi‑valuta', price:19.90, image:'https://images.unsplash.com/photo-1557821552-17105176677c?q=80&w=1000&auto=format&fit=crop', paymentLink:'#', type:'systems' },
      { id:'toast', title:'Notifier Module', subtitle:'Toasts & alerts client/server', price:6.00, image:'https://images.unsplash.com/photo-1541560052-77ec1bbc09f7?q=80&w=1000&auto=format&fit=crop', paymentLink:'#', type:'script' },
      { id:'ds', title:'DataStore Lite', subtitle:'Wrapper con retry/backoff', price:8.50, image:'https://images.unsplash.com/photo-1498050108023-c5249f4df085?q=80&w=1000&auto=format&fit=crop', paymentLink:'#', type:'script' }
    ];

    const grid = document.getElementById('productsGrid');
    function card(p){
      const off = p.compareAtPrice ? `<div class='text-xs line-through text-gray-400'>${fmtEUR(p.compareAtPrice)}</div>` : '';
      const badge = p.compareAtPrice ? `<span class='badge'>-${Math.round((1 - p.price/p.compareAtPrice)*100)}%</span>` : '';
      return `
      <article class="card glass rounded-2xl overflow-hidden reveal" data-type="${p.type}">
        <img src="${p.image}" alt="${p.title}" class="h-44 w-full object-cover"/>
        <div class="p-4">
          <div class="flex items-center justify-between">
            <h3 class="text-xl" style="font-family:var(--font-head)">${p.title}</h3>
            <div class="text-right">${off}<span class="text-red-400 font-bold">${fmtEUR(p.price)}</span></div>
          </div>
          <p class="text-gray-400 text-sm">${p.subtitle||''}</p>
          <div class="mt-3 flex gap-2 items-center">
            <a href="${p.paymentLink}" target="_blank" class="btn">Acquista</a>
            ${badge}
            <button class="link" data-id="${p.id}" data-action="details">Dettagli</button>
          </div>
        </div>
      </article>`
    }

    function render(filter='all'){
      grid.innerHTML = PRODUCTS.filter(p=> filter==='all' ? true : p.type===filter).map(card).join('');
      bindDetailButtons();
      reveal();
    }

    // ===== Modale Dettagli =====
    const modal = document.createElement('div');
    modal.className = 'hidden fixed inset-0 z-50';
    modal.innerHTML = `
      <div class="absolute inset-0 bg-black/70" data-close></div>
      <div class="relative mx-auto max-w-xl mt-20 glass rounded-2xl p-6">
        <div class="flex justify-between items-start gap-4">
          <div>
            <h3 id="mTitle" class="text-2xl" style="font-family:var(--font-head)"></h3>
            <p id="mSub" class="text-gray-400 mt-1"></p>
          </div>
          <button class="link" data-close>✕</button>
        </div>
        <img id="mImg" class="mt-4 w-full h-56 object-cover rounded-xl border border-white/10" alt="Anteprima prodotto" />
        <div class="mt-5 flex items-center justify-between">
          <span id="mPrice" class="text-red-400 font-bold text-xl"></span>
          <a id="mBuy" href="#" target="_blank" class="btn">Acquista ora</a>
        </div>
      </div>`;
    document.body.appendChild(modal);

    function openModal(p){
      $('#mTitle').textContent = p.title;
      $('#mSub').textContent = p.subtitle||'';
      $('#mImg').src = p.image;
      $('#mPrice').textContent = fmtEUR(p.price);
      $('#mBuy').href = p.paymentLink;
      modal.classList.remove('hidden');
      document.body.style.overflow='hidden';
    }
    function closeModal(){ modal.classList.add('hidden'); document.body.style.overflow=''; }
    modal.addEventListener('click',e=>{ if(e.target.hasAttribute('data-close')) closeModal(); });

    function bindDetailButtons(){
      grid.querySelectorAll('[data-action="details"]').forEach(b=>{
        b.addEventListener('click',()=>{
          const p = PRODUCTS.find(x=>x.id===b.dataset.id); if(p) openModal(p);
        })
      })
    }

    // ===== Filtri =====
    $$('[data-filter]').forEach(btn=>btn.addEventListener('click',()=>render(btn.dataset.filter)));

    // ===== Reveal on scroll =====
    function reveal(){
      const obs = new IntersectionObserver(entries=>{
        entries.forEach(e=>{ if(e.isIntersecting){ e.target.classList.add('show'); obs.unobserve(e.target);} })
      },{threshold:.2});
      $$('.reveal').forEach(el=>obs.observe(el));
    }

    // ===== Mobile nav =====
    $('#menuBtn').addEventListener('click',()=>{
      document.body.classList.toggle('open');
      $('#mobileNav').classList.toggle('hidden');
    });

    // ===== Contatti: copia email =====
    $('#copyEmail').addEventListener('click',()=>{
      const mail = $('#copyEmail').dataset.email;
      navigator.clipboard.writeText(mail).then(()=>{
        $('#copyEmail').textContent = 'Copiata!';
        setTimeout(()=>$('#copyEmail').textContent='Copia email',1200);
      });
    });

    // ===== Countdown promo 48h =====
    (function(){
      const end = Date.now() + 48*60*60*1000;
      const el = document.getElementById('countdown');
      function tick(){
        if(!el) return;
        const t = Math.max(0, end - Date.now());
        const h = String(Math.floor(t/3.6e6)).padStart(2,'0');
        const m = String(Math.floor((t%3.6e6)/6e4)).padStart(2,'0');
        const s = String(Math.floor((t%6e4)/1000)).padStart(2,'0');
        el.textContent = `${h}:${m}:${s}`; if(t>0) setTimeout(tick,1000);
      } tick();
    })();

    // ===== Init =====
    render('all');
    document.getElementById('year').textContent = new Date().getFullYear();
  </script>
</body>
</html>
