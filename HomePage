    body{ font-family:var(--font-body); background:#000; color:#fff; }
    /* HERO */
    .hero{position:relative;min-height:100vh;background-image:var(--bg-url);background-size:cover;background-position:center}
    .hero::after{content:"";position:absolute;inset:0;background:linear-gradient(180deg,rgba(0,0,0,.55),rgba(0,0,0,.78));}
    /* UI */
    .glass{background:rgba(0,0,0,.6);backdrop-filter:blur(8px);border:1px solid rgba(255,255,255,.06)}
    .btn{background:var(--accent);color:#fff;padding:.68rem 1.2rem;border-radius:.65rem;font-weight:700;transform:scale(1);transition:transform .22s cubic-bezier(.2,.8,.2,1), filter .22s ease, box-shadow .22s ease}
    .btn:hover{transform:scale(1.08);filter:brightness(1.12)}
    .btn:active{transform:scale(0.98)}
    .btn:focus-visible{outline:none;box-shadow:0 0 0 3px rgba(255,29,29,.35)}
    .link{border:1px solid rgba(255,255,255,.2);padding:.68rem 1.2rem;border-radius:.65rem;transform:scale(1);transition:transform .22s cubic-bezier(.2,.8,.2,1), background .22s ease, border-color .22s ease}
    .link:hover{transform:scale(1.05);background:rgba(255,255,255,.04);border-color:rgba(255,255,255,.3)}
    .badge{display:inline-block;background:rgba(255,29,29,.15);color:#ff8f8f;border:1px solid rgba(255,29,29,.25);border-radius:.5rem;padding:.15rem .5rem;font-size:.75rem}
    .card{transform:translateY(0) scale(1);transition:transform .28s cubic-bezier(.2,.8,.2,1),box-shadow .28s ease,background .28s ease}
    .card:hover{transform:translateY(-2px) scale(1.02);box-shadow:0 16px 40px rgba(255,29,29,.12);background:rgba(0,0,0,.64)}
    /* Reveal */
    .reveal{opacity:0;transform:translateY(20px);transition:opacity .6s ease,transform .6s ease}
    .reveal.show{opacity:1;transform:none}
    /* Hamburger */
    .hamb{width:28px;height:20px;position:relative}
    .hamb span{position:absolute;left:0;width:100%;height:2px;background:#fff;transition:.22s}
    .hamb span:nth-child(1){top:0}
    .hamb span:nth-child(2){top:9px}
    .hamb span:nth-child(3){bottom:0}
    body.open .hamb span:nth-child(1){transform:translateY(9px) rotate(45deg)}
    body.open .hamb span:nth-child(2){opacity:0}
    body.open .hamb span:nth-child(3){transform:translateY(-9px) rotate(-45deg)}
    /* Reduced motion */
    @media (prefers-reduced-motion: reduce){ .btn,.link,.card,.reveal{transition:none!important} html{scroll-behavior:auto} }
